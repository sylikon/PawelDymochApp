<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.maciek.paweldymochapp.ClosetSetActivity">

    <EditText
        android:id="@+id/set_name_editText"
        android:layout_width="match_parent"
        android:hint="@string/set_name"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/set_name_editText"
        android:layout_above="@id/save_set_button"
        android:id="@+id/set_image_scroll_view">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="200dp"
                android:src="@mipmap/ic_launcher"
                android:id="@+id/set_image_view"
                android:layout_gravity="center"/>

        </LinearLayout>

    </ScrollView>


    <Button
        android:id="@+id/save_set_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save_set_button"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true">

    </Button>





</RelativeLayout>
